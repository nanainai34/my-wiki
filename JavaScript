    governmentPanel.innerHTML = '';
    governmentPosts.forEach(post => {
        let div = document.createElement('div');
        div.innerHTML = `<p><strong>${post.name}</strong>: ${post.comment}</p>`;
        governmentPanel.appendChild(div);
    });
}

