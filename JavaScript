<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>コメント機能</title>
</head>
<body>
    <h1>コメント機能</h1>
    <div id="comments"></div>
    <form id="comment-form">
        <label for="comment-name">名前:</label>
        <input type="text" id="comment-name" name="comment-name" required>
        <label for="comment-content">コメント:</label>
        <textarea id="comment-content" name="comment-content" rows="4" required></textarea>
        <button type="submit">投稿する</button>
    </form>

    <script>
        function loadComments() {
            const comments = JSON.parse(localStorage.getItem('comments')) || [];
            const commentDiv = document.getElementById('comments');
            commentDiv.innerHTML = '';
            comments.forEach(comment => {
                const div = document.createElement('div');
                div.innerHTML = `<strong>${comment.name}:</strong> ${comment.content}`;
                commentDiv.appendChild(div);
            });
        }

        document.addEventListener('DOMContentLoaded', loadComments);

        document.getElementById('comment-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('comment-name').value;
            const content = document.getElementById('comment-content').value;

            const comments = JSON.parse(localStorage.getItem('comments')) || [];
            comments.push({ name, content });
            localStorage.setItem('comments', JSON.stringify(comments));

            document.getElementById('comment-name').value = '';
            document.getElementById('comment-content').value = '';
            loadComments();
        });
    </script>
</body>
</html>
